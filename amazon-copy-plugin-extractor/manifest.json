{
  "manifest_version": 3,
  "name": "亚马逊助手 (ASIN/价格提取器)",
  "version": "1.1",
  "description": "在亚马逊商品页面按 Alt+Q 或点击浮动按钮提取ASIN和价格到剪贴板。",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*", "https://www.amazon.com/*", "https://www.amazon.co.uk/*", "https://www.amazon.de/*", "https://www.amazon.fr/*", "https://www.amazon.it/*", "https://www.amazon.es/*", "https://www.amazon.co.jp/*", "https://www.amazon.ca/*", "https://www.amazon.com.au/*", "https://www.amazon.com.mx/*", "https://www.amazon.com.br/*", "https://www.amazon.nl/*", "https://www.amazon.in/*", "https://www.amazon.ae/*", "https://www.amazon.sa/*", "https://www.amazon.sg/*", "https://www.amazon.se/*", "https://www.amazon.pl/*", "https://www.amazon.be/*"]
    ,
      "js": ["content.js"]
    }
  ],
  "commands": {
    "extract-info": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "提取亚马逊商品信息"
    }
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "亚马逊助手"
  },
  "icons": {
    "48": "icon.png"
  }
}