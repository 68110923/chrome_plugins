{
  "manifest_version": 3,
  "name": "店小秘ASIN链接转换器",
  "version": "1.1.0",
  "description": "在店小秘订单详情弹窗中，自动将ASIN文本转换为可点击的亚马逊链接，并支持地区邮编自动设置。",
  "permissions": [
    "activeTab",
    "cookies",
    "scripting",
    "storage",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.dianxiaomi.com/order/index.htm*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://*.amazon.com/*",
    "https://*.amazon.it/*",
    "https://*.amazon.co.uk/*",
    "https://*.amazon.de/*",
    "https://*.amazon.fr/*",
    "https://*.amazon.jp/*",
    "https://*.amazon.ca/*",
    "https://*.amazon.cn/*",
    "https://*.amazon.in/*",
    "https://*.amazon.es/*",
    "https://*.amazon.com.mx/*",
    "https://*.amazon.com.br/*",
    "https://*.amazon.com.au/*",
    "https://*.amazon.nl/*",
    "https://*.amazon.se/*",
    "https://*.amazon.pl/*",
    "https://*.amazon.sg/*",
    "https://www.dianxiaomi.com/package/detail.htm"  // 添加目标请求地址
  ],
  "icons": {
    "16": "icons/icon16.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png"
    },
    "default_title": "店小秘ASIN链接转换器",
    "default_popup": "popup.html"
  }
}