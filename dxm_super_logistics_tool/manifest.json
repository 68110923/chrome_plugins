{
  "manifest_version": 3,
  "name": "店小秘一键发物流",
  "version": "1.0.1",
  "description": "为店小秘订单管理页面添加一键发物流功能",
  "permissions": [
    "cookies",
    "activeTab",
    "storage",
    "scripting",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "https://www.dianxiaomi.com/*",
    "https://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.dianxiaomi.com/web/order/approved*"
      ],
      "js": [
        "content_button.js",
        "monitor_search.js",
        "settings.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}